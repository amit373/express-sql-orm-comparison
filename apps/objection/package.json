{
  "name": "@apps/objection",
  "version": "1.0.0",
  "description": "Objection.js ORM implementation",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "test": "jest",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "clean": "rm -rf dist",
    "migrate": "tsx src/migrate.ts",
    "migration:rollback": "tsx -e \"import {knex} from './src/config/database'; knex.migrate.rollback().then(() => knex.destroy())\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "objection": "^3.0.0",
    "knex": "^3.0.0",
    "pg": "^8.11.0",
    "@packages/config": "workspace:*",
    "@packages/constants": "workspace:*",
    "@packages/logger": "workspace:*",
    "@packages/common": "workspace:*",
    "@packages/swagger": "workspace:*",
    "@packages/types": "workspace:*",
    "@packages/validation": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/cors": "^2.8.13",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "@types/jest": "^29.5.3",
    "jest": "^29.6.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "objection",
    "postgresql"
  ],
  "author": "Your Name",
  "license": "MIT"
}
